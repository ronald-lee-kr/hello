<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.cal2application.cal2Activity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Num1Text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Num2Text"
        android:layout_below="@+id/Num1Text"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/Num2Text"
        android:layout_alignParentStart="true"
        android:columnCount="5">

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/Btn01"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/Btn02"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/Btn03"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/Btn04"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/Btn05"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/Btn06"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/Btn07"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/Btn08"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/Btn09"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/Btn0"
            android:layout_row="1"
            android:layout_column="4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더하기"
            android:id="@+id/AddBtn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빼기"
            android:id="@+id/SubBtn"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="곱하기"
            android:id="@+id/MulBtn"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나누기"
            android:id="@+id/DivBtn"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계산 결과"
            android:id="@+id/textView"
            android:layout_row="7"
            android:layout_column="0"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ResultView"
            android:layout_row="8"
            android:layout_column="0"
            android:textColor="#0000ff"
            android:layout_columnSpan="5"
            android:textSize="40dp"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/textroundedbox" />
    </GridLayout>
</RelativeLayout>
